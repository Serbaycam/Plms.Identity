@model List<AuthServer.Web.Models.TestModuleDto>

@{
    ViewData["Title"] = "Test Modülleri";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>📚 Test Modülleri</h2>
    <a href="#" class="btn btn-primary">Yeni Ekle</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        Kayıt bulunamadı veya sunucuya erişilemiyor.
    </div>
}
else
{
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Kod</th>
                <th>Test Adı</th>
                <th>Açıklama</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Düzenle</a>
                        <a href="#" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}